<body>
    <button id="ww1-toggle">WW1 Filter</button>

    <div id="ww1-overlay">
        <canvas id="noise-canvas"></canvas>
        <div id="film-grain"></div>
        <div id="vignette"></div>
        <div id="flicker"></div>
        <div id="judder"></div>
        <div id="scratches-container"></div>
        <div id="particles-container"></div>
    </div>

    <div class="demo-content">
        <h1>World War 1 Film Effect</h1>
        <p>Click the "WW1 Filter" button in the top right to activate the vintage film overlay effect.</p>
        <p>This effect simulates old wartime footage with grainy texture, film scratches, dust particles, vignetting, and the characteristic flicker and judder of early cinema.</p>
        <p>The overlay includes animated static noise, moving scratches that fall like rain, floating dust particles, and subtle frame shake to recreate the authentic feel of 1910s-era film.</p>
        <p>All effects are layered and animated independently to create a realistic vintage cinematography experience.</p>
    </div>

    <script>
        // Toggle functionality
        const toggle = document.getElementById('ww1-toggle');
        const overlay = document.getElementById('ww1-overlay');
        const scratchesContainer = document.getElementById('scratches-container');
        const particlesContainer = document.getElementById('particles-container');

        toggle.addEventListener('click', () => {
            toggle.classList.toggle('active');
            overlay.classList.toggle('active');
        });

        // Animated noise canvas
        const canvas = document.getElementById('noise-canvas');
        const ctx = canvas.getContext('2d');

        function resizeCanvas() {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        }
        resizeCanvas();
        window.addEventListener('resize', resizeCanvas);

        function drawNoise() {
            const imageData = ctx.createImageData(canvas.width, canvas.height);
            const buffer = new Uint32Array(imageData.data.buffer);

            for (let i = 0; i < buffer.length; i++) {
                if (Math.random() > 0.5) {
                    buffer[i] = 0xff000000 | (Math.random() * 255 << 16) | (Math.random() * 255 << 8) | Math.random() * 255;
                }
            }

            ctx.putImageData(imageData, 0, 0);
        }

        function animateNoise() {
            drawNoise();
            requestAnimationFrame(animateNoise);
        }
        animateNoise();

        // Create film scratches
        function createScratches() {
            for (let i = 0; i < 8; i++) {
                const scratch = document.createElement('div');
                scratch.className = 'scratch';
                scratch.style.left = `${Math.random() * 100}%`;
                scratch.style.height = `${50 + Math.random() * 150}px`;
                scratch.style.setProperty('--drift', `${-20 + Math.random() * 40}px`);
                scratch.style.animationDuration = `${3 + Math.random() * 4}s`;
                scratch.style.animationDelay = `${Math.random() * 5}s`;
                scratchesContainer.appendChild(scratch);
            }
        }

        // Create dust particles
        function createParticles() {
            for (let i = 0; i < 30; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = `${Math.random() * 100}%`;
                particle.style.top = `${Math.random() * 100}%`;
                particle.style.setProperty('--drift-x', `${-30 + Math.random() * 60}px`);
                particle.style.animationDuration = `${4 + Math.random() * 6}s`;
                particle.style.animationDelay = `${Math.random() * 5}s`;
                particlesContainer.appendChild(particle);
            }
        }

        createScratches();
        createParticles();
    </script>
</body>
</html>