    <title>WW1 Film Filter</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            min-height: 100vh;
            padding: 20px;
        }

        /* Toggle Button */
        #ww1-toggle {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 10001;
            padding: 12px 24px;
            background: #000;
            color: #fff;
            border: 2px solid #fff;
            cursor: pointer;
            font-size: 14px;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }

        #ww1-toggle:hover {
            background: #fff;
            color: #000;
        }

        #ww1-toggle.active {
            background: #fff;
            color: #000;
        }

        /* WW1 Film Overlay Container */
        #ww1-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            pointer-events: none;
            z-index: 10000;
            opacity: 0;
            transition: opacity 0.5s ease;
        }

        #ww1-overlay.active {
            opacity: 1;
        }

        /* Black and White Filter */
        #ww1-overlay.active ~ * {
            filter: grayscale(100%) contrast(1.2) brightness(0.9);
        }

        /* Static Noise Canvas */
        #noise-canvas {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0.15;
            mix-blend-mode: overlay;
        }

        /* Film Grain Texture */
        #film-grain {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="300" height="300"><filter id="noise"><feTurbulence type="fractalNoise" baseFrequency="0.9" numOctaves="4" stitchTiles="stitch"/></filter><rect width="100%" height="100%" filter="url(%23noise)" opacity="0.4"/></svg>');
            opacity: 0.3;
            animation: grain 0.5s steps(10) infinite;
        }

        @keyframes grain {
            0%, 100% { transform: translate(0, 0); }
            10% { transform: translate(-5%, -10%); }
            20% { transform: translate(-15%, 5%); }
            30% { transform: translate(7%, -25%); }
            40% { transform: translate(-5%, 25%); }
            50% { transform: translate(-15%, 10%); }
            60% { transform: translate(15%, 0%); }
            70% { transform: translate(0%, 15%); }
            80% { transform: translate(3%, 25%); }
            90% { transform: translate(-10%, 10%); }
        }

        /* Vignette Effect */
        #vignette {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(ellipse at center, transparent 0%, transparent 30%, rgba(0,0,0,0.3) 70%, rgba(0,0,0,0.8) 100%);
            pointer-events: none;
        }

        /* Scratches and Particles */
        .scratch {
            position: absolute;
            width: 1px;
            background: rgba(255, 255, 255, 0.3);
            animation: scratch-fall linear infinite;
        }

        @keyframes scratch-fall {
            0% {
                transform: translateY(-100vh) translateX(0);
                opacity: 0;
            }
            10% {
                opacity: 0.5;
            }
            90% {
                opacity: 0.5;
            }
            100% {
                transform: translateY(100vh) translateX(var(--drift, 0));
                opacity: 0;
            }
        }

        /* Dust Particles */
        .particle {
            position: absolute;
            width: 2px;
            height: 2px;
            background: rgba(255, 255, 255, 0.6);
            border-radius: 50%;
            animation: particle-float linear infinite;
        }

        @keyframes particle-float {
            0% {
                transform: translate(0, -10px) scale(1);
                opacity: 0;
            }
            10% {
                opacity: 0.8;
            }
            90% {
                opacity: 0.8;
            }
            100% {
                transform: translate(var(--drift-x, 20px), 100vh) scale(0.5);
                opacity: 0;
            }
        }

        /* Flicker Effect */
        #flicker {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.1);
            animation: flicker 0.1s infinite;
        }

        @keyframes flicker {
            0% { opacity: 1; }
            50% { opacity: 0.8; }
            100% { opacity: 1; }
        }

        /* Frame Judder */
        #judder {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            animation: judder 0.2s infinite;
        }

        @keyframes judder {
            0% { transform: translate(0, 0); }
            25% { transform: translate(1px, -1px); }
            50% { transform: translate(-1px, 1px); }
            75% { transform: translate(1px, 0); }
            100% { transform: translate(0, 0); }
        }

        /* Demo Content */
        .demo-content {
            max-width: 800px;
            margin: 80px auto 40px;
